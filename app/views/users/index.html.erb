<%= render 'side', user: @user %>


<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <div>
      <tr>
        <th><%= image_tag user.get_profile_image(100,100) %></th>
        <th><%= user.name%></th>
        <th>  <%= link_to "Show", user_path(user.id)%></th>
      </tr>   
    </div>
    <% end %>
  </tbody>
  </table>
</div>
