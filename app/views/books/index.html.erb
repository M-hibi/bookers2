<%= render 'users/side', user: @user %>

<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>     
      <th>Title</th>
      <th>Opinion</th>

      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <div>
      <tr>
        <th><%= image_tag book.get_profile_image(100,100) %></th>
        <th><%= book.title %></th>
        <th><%= book.body %></th>
      </tr>   
    </div>
    <% end %>
  </tbody>
  </table>
</div>
